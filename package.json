{
    "name": "jobq",
    "version": "0.1.0",
    "description": "boilerplate for structured task handling.",
    "author": "Carter Himmel",
    "main": "dist/src/index.js",
    "license": "Apache-2.0",
    "files": [
        "/dist"
    ],
    "scripts": {
        "lint": "eslint src --ext .ts",
        "lint:fix": "eslint src examples --fix --ext .ts",
        "cleardir": "rimraf dist/*",
        "compile": "tsc",
        "build": "yarn cleardir && yarn compile",
        "test": "ts-node examples/expiresub.ts"
    },
    "devDependencies": {
        "@commitlint/cli": "^9.1.2",
        "@commitlint/config-angular": "^9.1.2",
        "@typescript-eslint/eslint-plugin": "^4.1.1",
        "@typescript-eslint/parser": "^4.1.1",
        "eslint": "^7.9.0",
        "eslint-config-marine": "^7",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-prettier": "^3.1.4",
        "husky": "^4.2.5",
        "prettier": "^2",
        "rimraf": "^3.0.2",
        "ts-node": "^9.0.0",
        "typescript": "^4.0.2"
    },
    "eslintConfig": {
        "extends": "marine/prettier/node",
        "rules": {
            "@typescript-eslint/naming-convention": 0,
            "@typescript-eslint/no-namespace": 0
        }
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-angular"
        ],
        "rules": {
            "type-enum": [
                2,
                "always",
                [
                    "chore",
                    "build",
                    "ci",
                    "docs",
                    "feat",
                    "fix",
                    "perf",
                    "refactor",
                    "revert",
                    "style",
                    "test",
                    "types",
                    "wip"
                ]
            ]
        }
    },
    "ava": {
        "extensions": [
            "ts"
        ],
        "require": [
            "ts-node/register"
        ]
    }
}
